<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Cardify.MAUI.Views"
             x:Class="Cardify.MAUI.Pages.MainPage"
             Title="Cardify Dashboard"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F9FAFB">

    <Grid ColumnDefinitions="280,*" RowDefinitions="*">
        
        <!-- Sidebar -->
        <views:SidebarView Grid.Column="0" Grid.Row="0" 
                           x:Name="Sidebar" />

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Grid.Row="0">
            
            <!-- Dashboard View -->
            <views:DashboardView x:Name="DashboardView" IsVisible="True" />
            
            <!-- Cards View -->
            <views:CardsView x:Name="CardsView" IsVisible="False" />
            
            <!-- Coming Soon Views -->
            <views:ComingSoonView x:Name="TransactionsComingSoonView" IsVisible="False" />
            <views:ComingSoonView x:Name="SettingsComingSoonView" IsVisible="False" />

        </Grid>

    </Grid>

</ContentPage>
