<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cardify.MAUI.Views.ComingSoonView">
    
    <ScrollView Padding="24">
        <VerticalStackLayout Spacing="24">
            
            <!-- Page Header -->
            <VerticalStackLayout Spacing="8">
                <Label x:Name="PageTitleLabel" Text="Coming Soon" 
                       FontSize="28" FontAttributes="Bold" 
                       TextColor="#1F2937" />
                <Label x:Name="PageSubtitleLabel" Text="This feature is under development" 
                       FontSize="16" TextColor="#6B7280" />
            </VerticalStackLayout>

            <!-- Coming Soon Content -->
            <Border BackgroundColor="White" 
                    Stroke="#E5E7EB" StrokeThickness="1"
                    StrokeShape="RoundRectangle 12" Padding="40">
                <VerticalStackLayout Spacing="20" HorizontalOptions="Center">
