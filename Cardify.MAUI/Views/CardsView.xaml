<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Cardify.MAUI.Views"
             x:Class="Cardify.MAUI.Views.CardsView">
    <Grid x:Name="MainGrid">
        
        <!-- Main Cards View -->
        <Grid x:Name="CardsListGrid" RowDefinitions="Auto,*,Auto" 
              ColumnDefinitions="*,Auto"
              Padding="20"
              RowSpacing="20">
            
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="10">
                <Label Text="My Cards" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#1F2937"/>
                <Label Text="Manage your credit and debit cards" 
                       FontSize="16" 
                       TextColor="#6B7280"/>
            </VerticalStackLayout>

            <!-- Cards CollectionView -->
            <CollectionView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                           x:Name="CardsCollectionView"
                           ItemsSource="{Binding Cards}"
                           SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                                   Span="2" 
                                   HorizontalItemSpacing="15"
                                   VerticalItemSpacing="15"/>
                </CollectionView.ItemsLayout>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border HeightRequest="200"
                                Stroke="#E5E7EB"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12"
                                Margin="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{Binding CardColorStart}" Offset="0.0"/>
                                    <GradientStop Color="{Binding CardColorEnd}" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            
                            <Grid RowDefinitions="Auto,*,Auto,Auto,Auto" 
                                  Padding="20">
                                
                                <!-- Card Type -->
                                <Label Grid.Row="0" 
                                       Text="{Binding CardType}"
                                       FontSize="12"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       Opacity="0.9"/>
                                
                                <!-- Card Number (moved to middle) -->
                                <Label Grid.Row="2"
                                       Text="{Binding MaskedNumber}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       Margin="0,10"/>
                                
                                <!-- Card Holder Name (moved below number) -->
                                <Label Grid.Row="3"
                                       Text="{Binding CardHolderName}"
                                       FontSize="14"
                                       TextColor="White"
                                       FontAttributes="Bold"
                                       Opacity="0.9"
                                       Margin="0,5,0,0"/>
                                
                                <!-- Action Buttons -->
                                <HorizontalStackLayout Grid.Row="4"
                                                       Spacing="8"
                                                       HorizontalOptions="End"
                                                       VerticalOptions="End"
                                                       Margin="0,10,0,0">
                                    
                                    <Button Text="Edit"
                                            BackgroundColor="#FFFFFF"
                                            TextColor="#374151"
                                            FontSize="10"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            Opacity="0.9"
                                            Clicked="OnEditCardClicked"/>
                                    
                                    <Button Text="Delete"
                                            BackgroundColor="#EF4444"
                                            TextColor="White"
                                            FontSize="10"
                                            Padding="8,4"
                                            CornerRadius="4"
                                            Opacity="0.9"
                                            Clicked="OnDeleteCardClicked"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                         VerticalOptions="Center"
                                         Spacing="20">
                        <Label Text="No cards yet" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>
                        <Label Text="Add your first card to get started" 
                               FontSize="16" 
                               TextColor="#9CA3AF"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Add Card Button -->
            <Button Grid.Row="2" Grid.Column="1"
                    Text="+ Add Card"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    Padding="20,12"
                    Clicked="OnAddCardClicked"/>
        </Grid>

        <!-- Add Card View -->
        <views:AddCardView x:Name="AddCardView" 
                          IsVisible="False"
                          CardAdded="OnCardAdded"
                          CardUpdated="OnCardUpdated"
                          Cancelled="OnCardCancelled"/>

    </Grid>
</ContentView> 