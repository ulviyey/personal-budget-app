<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cardify.MAUI.Views.SidebarView"
             x:Name="ThisSidebarView"
             BackgroundColor="#FFFFFF">

    <Grid RowDefinitions="Auto,*" Padding="15">

        <!-- Top content: Logo + Navigation -->
        <VerticalStackLayout Spacing="0" Grid.Row="0">
            <!-- Logo -->
            <Border Margin="0,0,0,20" Padding="15" Background="#6366F1"
                    StrokeShape="RoundRectangle 10" StrokeThickness="0">
                <Label Text="Cardify" TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            </Border>

            <!-- Navigation Items -->
            <VerticalStackLayout Spacing="5">
                <Border x:Name="OverviewBorder" StrokeShape="RoundRectangle 8" StrokeThickness="0" Padding="10,5">
                    <Button x:Name="OverviewButton" Text="Overview" Clicked="OnSectionButtonClicked" CommandParameter="overview"
                            BackgroundColor="Transparent" FontAttributes="Bold" FontSize="16" Padding="5" CornerRadius="8" BorderWidth="0"/>
                </Border>

                <Border x:Name="CardsBorder" StrokeShape="RoundRectangle 8" StrokeThickness="0" Padding="10,5">
                    <Button x:Name="CardsButton" Text="Cards" Clicked="OnSectionButtonClicked" CommandParameter="cards"
                            BackgroundColor="Transparent" FontAttributes="Bold" FontSize="16" Padding="5" CornerRadius="8" BorderWidth="0"/>
                </Border>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <!-- Bottom content: Logout -->
        <Border Grid.Row="1" StrokeShape="RoundRectangle 8" StrokeThickness="0" Padding="10,5" Margin="0,20,0,0"
                VerticalOptions="End">
            <Button x:Name="LogoutButton" Text="Sign Out" Clicked="OnLogoutClicked"
                    BackgroundColor="#F87171" TextColor="White"
                    FontAttributes="Bold" FontSize="16"
                    Padding="5" CornerRadius="8" BorderWidth="0"/>
        </Border>
    </Grid>
</ContentView>
